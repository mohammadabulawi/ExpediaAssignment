<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <title>
    Hotels
  </title>
</head>

<body>

  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/index">
          Expedia
        </a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li class="active">
            <a href="#/index">Hotels</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>


  <div class="container">
    <form action="/index/" method="get">
      <div class="row top-buffer">
        <div class="col-sm-2">
          <span>Destination</span>
        </div>
        <div class="col-sm-2">
          <input type="text" name="destinationName" class="form-control" value="<%= params.destinationName %>" required/>
        </div>
        <div class="col-sm-2">
          <span>Travel Start Date</span>
        </div>
        <div class="col-sm-2">
          <input type="date" name="minTripStartDate" class="form-control" value="<%= params.minTripStartDate %>" required/>
        </div>
        <div class="col-sm-2">
          <span>Travel End Date</span>
        </div>
        <div class="col-sm-2">
          <input type="date" name="maxTripStartDate" class="form-control" value="<%= params.maxTripStartDate %>" required />
        </div>
      </div>
      <div class="row row top-buffer">
        <div class="col-sm-2">
          <span>Length of Stay</span>
        </div>
        <div class="col-sm-2">
          <input type="number" name="lengthOfStay" class="form-control" value="<%= params.lengthOfStay %>" required/>
        </div>
        <div class="col-sm-2">
          <span>Min Guest Review Rating</span>
        </div>
        <div class="col-sm-2">
          <input type="number" name="minGuestRating" class="form-control" value="<%= params.minGuestRating %>" required/>
        </div>
        <div class="col-sm-2">
          <span>Max Guest Review Rating</span>
        </div>
        <div class="col-sm-2">
          <input type="number" name="maxGuestRating" class="form-control" value="<%= params.maxGuestRating %>" required/>
        </div>
      </div>
      <div class="row row top-buffer">
        <div class="col-sm-2">
          <span>Min Total Rate</span>
        </div>
        <div class="col-sm-2">
          <input type="number" name="minTotalRate" class="form-control" value="<%= params.minTotalRate %>" required/>
        </div>
        <div class="col-sm-2">
          <span>Max Total Rate</span>
        </div>
        <div class="col-sm-2">
          <input type="number" name="maxTotalRate" class="form-control" value="<%= params.maxTotalRate %>" required/>
        </div>
      </div>

      <div class="row top-buffer">
        <div class="col-sm-2">
          <input class="btn btn-primary" type="submit" value="Search">
        </div>
        <div class="col-sm-2">
          <a class="btn btn-danger" href="/index">Clear</a>
        </div>
      </div>
    </form>
  </div>
  <hr size="60">

  <div class="container">

    <% hotels.forEach(function(item){ %>
      <div class="card" style="width:200px">

        <div class="card-body">
          <a class="card-title" target="_blank" href="<%=decodeURIComponent(item.hotelUrls.hotelInfositeUrl)%>">
            <%= item.hotelInfo.hotelName %> 
          </a>
          <a target="_blank" href="<%=decodeURIComponent(item.hotelUrls.hotelInfositeUrl)%>">
            <img class="card-img-left" src="<%= item.hotelInfo.hotelImageUrl %>" alt=" Card image " style="width:100% ">
           </a>

          <p class="card-text ">
            <span>Country: </span>
            <span>
              <%= item.destination.country%>
            </span>
          </p>
          <p class="card-text ">
            <span>City: </span>
            <span>
              <%= item.destination.city%>
            </span>
          </p>
          <p class="card-text ">
            <span>Rate: </span>
            <span>
              <%= item.hotelInfo.hotelStarRating %>
            </span>
          </p>
          <p class="card-text ">
            <span>Guest Review Rating: </span>
            <span>
              <%= item.hotelInfo.hotelGuestReviewRating %>
            </span>
          </p>
          <p class="card-text ">
            <span>Total Review Rating: </span>
            <span>
              <%= item.hotelInfo.hotelReviewTotal %>
            </span>
          </p>
          <p class="card-text ">
            <span>Hotel Star Rating: </span>
            <span>
              <%= item.hotelInfo.hotelReviewTotal %>
            </span>
          </p>
          <p class="card-text ">
              <span>avg/night: </span>
              <span>
                <%= item.hotelPricingInfo.averagePriceValue %>
              </span>
              <span>$</span>
            </p>

        </div>
                </div>
                <hr size="60 ">

        <% }); %>
  </div>
  <footer class="container-fluid ">
    </footer>
</body>

</html>